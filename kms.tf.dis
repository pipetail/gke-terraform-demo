resource "google_kms_key_ring" "sops-keyring" {
  name     = "sops-keyring"
  location = "global"

  depends_on = [
    google_project_service.services["cloudkms.googleapis.com"],
  ]
}

resource "google_kms_crypto_key" "sops-key" {
  name            = "sops-key"
  key_ring        = google_kms_key_ring.sops-keyring.id
  rotation_period = "100000s"

  purpose = "ENCRYPT_DECRYPT"

  version_template {
    algorithm = "GOOGLE_SYMMETRIC_ENCRYPTION"
  }

  lifecycle {
    prevent_destroy = true
  }
}
